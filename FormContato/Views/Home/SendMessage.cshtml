@{
    ViewData["Title"] = "Message me!";
}

<div class="text-center">
    <h1 class="display-4">Envie uma mensagem</h1>
    <form action="/Home/SaveMessage" method="post">
        <p>
            <input type="text" name="Nome" id="name" placeholder="Nome" />
        </p>
        <p>
            <input type="email" name="Email" id="email" placeholder="E-mail" />
        </p>
        <p>
            <textarea name="Mensagem" rows="5" cols="40" placeholder="Digite sua mensagem."></textarea>
        </p>
        <input type="submit" name="enviar" id="enviar" value="Enviar" />

    </form>
</div>
